<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Add">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/back"
        android:id="@+id/back"
        android:layout_margin="8dp">
    </ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:layout_margin="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            app:backgroundTint="#DFB300"
            android:id="@+id/addPlaylist"
            app:cornerRadius="20dp"
            android:text="Add Playlist"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAllCaps="false">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_margin="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            app:backgroundTint="#DFB300"
            android:id="@+id/uploadMusic"
            app:cornerRadius="20dp"
            android:text="Upload Music"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAllCaps="false">
        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:layout_margin="10dp"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:paddingVertical="13dp"
            app:backgroundTint="#DFB300"
            android:id="@+id/recordMusic"
            app:cornerRadius="20dp"
            android:text="Record Music"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textAllCaps="false">
        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:background="#2a2730"
            android:paddingVertical="8dp"
            android:id="@+id/liked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/heart">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Liked"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:background="@color/black"
            android:paddingVertical="8dp"
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/plus">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:background="#2a2730"
            android:paddingVertical="8dp"
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/search">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

        <LinearLayout
            android:background="#2a2730"
            android:paddingVertical="8dp"
            android:id="@+id/listenlater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@drawable/clock">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Listen Later"
                android:textColor="@color/white">

            </TextView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>